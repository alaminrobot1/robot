<!DOCTYPE html>
<html>
<head>
    <title>Arbitrage Opportunities</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
    <h1>Arbitrage Opportunities</h1>


    <div class="counts">
        <div class="count">
            <span class="label">Positive Count:</span>
            <span class="value">{{ positive_count }}</span>
        </div>
        <div class="count">
            <span class="label">Negative Count:</span>
            <span class="value">{{ negative_count }}</span>
        </div>
        <div class="count">
            <span class="label">Total Opportunities:</span>
            <span class="value">{{ positive_count + negative_count }}</span>
        </div>
    </div>
    <table>
        <thead>
            <tr>
                <th>Symbol</th>
                <th>Gateio Price</th>
                <th>MEXC Global Price</th>
                <th>Arbitrage (%)</th>
                <th>Gateio Trade Link</th>
                <th>MEXC Trade Link</th>
            </tr>
        </thead>
        <tbody>
            {% for item in data %}
                <tr>
                    <td>{{ item.symbol }}</td>
                    <td>{{ item.gateio_price }}</td>
                    <td>{{ item.mexc_price }}</td>
                    <td class="arbitrage">{{ item.arbitrage }}</td>
                    <td><a href="{{ item.gateio_trade_link }}" target="_blank">GATEIO</a></td>
                    <td><a href="{{ item.mexc_trade_link }}" target="_blank">MEXC</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div id="arrow-key"></div>
    
    <div id="color-picker">
        <input type="color" id="selected-color" value="#ff0000">
    </div>
    




    <script src="{{ url_for('static', filename='script.js') }}"></script>
</body>
</html>

